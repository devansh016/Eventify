<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="icon" type="image/x-icon" href="assets/icon.svg" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet"/>
  </head>
  <body>
    <div class="navbar">
      <a class="nav-content" href="https://juit.acm.org/" target="_blank">
        <img src="assets/logo.svg" alt="" height="60" width="350" />
      </a>
      <!-- Link to the admin page -->
      <div class="admin-link-container">
        <button class="btn" onclick="document.location='/admin/adminpage.html'">Admin Dashboard</button>
    </div>
    </div>

    <div class="container">

      <div class="header">
        <div class="title">
          <h1> <%= profile.welcomeMessage %></h1>
        </div>
        <p>
            <%= profile.description %>
        </p>
      </div>
    <!-- Workshop Tiles -->
      <div class="wrapper-flex">
        <% events.forEach( event => { %>
        <div class="speaker-container">
          <img src="assets/price-tag.png" id="price-tag">
          <div id="price"> <%= event.price %> </div>
          <div class="banner-img"></div>
          <img src="<%= event.image%>" alt="profile image" class="profile-img"/>
          <h1 class="name"><%= event.title %></h1>
          <div class="description">
            <div class="timings">
              <p><i class="bi bi-calendar-fill"></i><%= event.date %></p>
              <p><i class="bi bi-clock-fill"></i><%= event.time%></p>
            </div>
            <%= event.description %>
          </div>
          <button class="btn" onclick="document.location='/workshops/workshop1.html'">Register Now</button>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>